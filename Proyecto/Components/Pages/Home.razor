@page "/"
@using Proyecto.ViewModels
@using Proyecto.Models
@using Proyecto.Contracts
@inject IProjectService ProjectService
@inject NavigationManager Navigation

<PageTitle>Editor de Fotos - Mis Proyectos</PageTitle>

<h1>Mis Proyectos</h1>

<div class="toolbar">
    <button class="btn btn-primary" @onclick="NavigateToCreate">
        <i class="bi bi-plus-circle me-2"></i>
        Nuevo Proyecto
    </button>
</div>

@if (viewModel?.Projects?.Count == 0)
{
    <div class="empty-state">
        <p>No tienes proyectos creados</p>
        <p>Crea tu primer proyecto para empezar a editar fotos</p>
    </div>
}
else
{
    <div class="projects-grid">
        @foreach (var project in viewModel?.Projects ?? new List<Project>())
        {
            <div class="project-card">
                <div class="project-thumbnail">
                    <img src="@project.Thumbnail" alt="@project.Name" />
                </div>
                <div class="project-info">
                    <h3>@project.Name</h3>
                    <p>Editado: @project.LastModified.ToString("dd/MM/yyyy")</p>
                </div>

                <div class="project-actions">
                    <button class="btn btn-sm btn-success" @onclick="() => OpenEditor(project.Id)"
                            title="Editar imagen">
                        <i class="bi bi-palette me-1"></i>
                        Editor
                    </button>
                    <button class="btn btn-sm btn-outline" @onclick="() => NavigateToEdit(project)"
                            title="Modificar datos">
                        <i class="bi bi-pencil-square me-1"></i>
                        Modificar
                    </button>
                    <button class="btn btn-sm btn-danger" @onclick="() => DeleteProject(project)"
                            title="Eliminar">
                        <i class="bi bi-trash me-1"></i>
                        Eliminar
                    </button>
                </div>
            </div>
        }
    </div>
}

@code {
    private HomeViewModel? viewModel;

    protected override void OnInitialized()
    {
        viewModel = new HomeViewModel(ProjectService);
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/create-project");
    }

    private void NavigateToEdit(Project project)
    {
        Navigation.NavigateTo($"/edit-project/{project.Id}");
    }

    private void OpenEditor(Guid projectId)
    {
        Navigation.NavigateTo($"/editor/{projectId}");
    }

    private void DeleteProject(Project project)
    {
        viewModel?.DeleteProject(project);
        StateHasChanged();
    }
}